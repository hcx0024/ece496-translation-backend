# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Supabase Configuration
# Get these from your Supabase project dashboard
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_PROJECT_ID=your_project_id_here

# OpenAI Configuration
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Translation Service Configuration
# Google Translate API Key
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key_here

# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Development Settings
# Set to true to enable debug logging
DEBUG=false

# Database Settings (if using external PostgreSQL instead of Supabase)
# DATABASE_URL=postgresql://username:password@localhost:5432/language_learning_db
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=language_learning_db
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# JWT Configuration (if using custom auth)
# JWT_SECRET=your_jwt_secret_key
# JWT_EXPIRES_IN=7d

# External Services
# Apple Vision Framework (no API key needed, built into iOS)
# APPLE_VISION_API_KEY=not_required

# Email Configuration (if using custom email service)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Monitoring and Analytics
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_KEY=your_analytics_key_here

# File Upload Settings
# MAX_FILE_SIZE=10MB
# ALLOWED_FILE_TYPES=jpg,jpeg,png,webp

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Caching
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600